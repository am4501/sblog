<!DOCTYPE html>
<html>
  <head>
    <title>Sblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
     
            <%= link_to 'Simple BLOG', root_path, class: 'navbar-brand' %>
  <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>

             <p class="navbar-text">Hello, <%= current_user.username %></p>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-default navbar-btn' %>

            <% else %>

            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-default navbar-btn' %>  <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default navbar-btn' %>

          <% end %>
  </ul>
  </div>
</nav>

<div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-3">
          

          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          </div>
        
          <div class="col-xs-9">
            </br>
            </br>
            <%= yield %>
          </div>
      </div>
</div>


  </body>
</html>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<br />

<br /><strong>Comments:</strong><br />

<% @post.comments.each do |comment| %>
	<p>
	<%= comment.body %> | by <%= comment.username %> created at <%= comment.created_at %>
	</p>
<% end %>

<strong>Add comment:</strong>

<p>
<%= form_for([@post, @post.comments.build]) do |f| %>

	<p>
		<%= f.label :username, current_user.username if current_user %><br />
		<%= f.text_area :body %>
   		
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

</p>

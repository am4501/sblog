<p>
  <strong>Title:</strong>
  <%= @post.title %> 

 <p>
  <strong>Created by:</strong>
  <%= @post.username %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @post.created_at %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default btn-xs' %> |
<%= link_to 'Back', posts_path, class: 'btn btn-default btn-xs' %>
<br />

<br /><strong>Comments:</strong><br />

<% @post.comments.each do |comment| %>
	<p>
	<%= comment.body %> | by <%= comment.username %> created at <%= comment.created_at %>
	</p>
<% end %>

<strong>Add comment:</strong>

<p>
<%= form_for([@post, @post.comments.build]) do |f| %>

	<p>
		<%= f.label :username, current_user.username if current_user %><br />
		<%= f.text_area :body %>
   		
	</p>

	<p>
		<%= f.submit 'Create comment', :class => 'btn btn-default' %>
	</p>
<% end %>

</p>
